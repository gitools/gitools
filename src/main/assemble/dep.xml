		<format>tar.gz</format>
		<format>dir</format>
	</formats>
	<includeSiteDirectory>false</includeSiteDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/command</directory>
			<includes>
				<include>*</include>
