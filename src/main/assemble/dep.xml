			<directory>templates</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>templates</outputDirectory>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<!--<includes>
				<include>es.imim.bg.ztools:ztools-core</include>
