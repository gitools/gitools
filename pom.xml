<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>es.imim.bg.ztools</groupId>
	<artifactId>ztools</artifactId>
	<packaging>pom</packaging>
	<version>1.2.2-SNAPSHOT</version>
	<name>ztools</name>
	<description>Statistical analysis tools</description>
	<url>https://bg.imim.es/trac/bg/ztools</url>

	<organization>
		<name>Biomedical Genomics Lab</name>
		<url>http://bg.imim.es</url>
	</organization>

	<developers>
		<developer>
			<id>christian</id>
			<name>Christian PÃ©rez Llamas</name>
			<email>christian.perez@upf.edu</email>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
		</developer>
	</developers>
	
	<licenses>
		<license>
			<name>Apache 2</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>manual</distribution>
		</license>
	</licenses>
	
	<issueManagement>
		<system>Trac</system>
		<url>https://bg.imim.es/trac/bg</url>
	</issueManagement>
	
	<scm>
		<connection>scm:svn:https://bg.imim.es/svn/ztools/trunk</connection>
		<developerConnection>scm:svn:https://bg.imim.es/svn/ztools/trunk</developerConnection>
		<url>https://bg.imim.es/svn/ztools/trunk</url>
	</scm>
		
	<build>
		<!--<resources>
			<resource>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/command</directory>
				<includes>
					<include>zcalc</include>
				</includes>
				<targetPath>${basedir}/bin</targetPath>
			</resource>
		</resources>-->
		
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.2</version>
					<configuration>
						<archive>
							<manifest>
								<addClasspath>true</addClasspath>
								<classpathPrefix />
								<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
								<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
							</manifest>
						</archive>
					</configuration>
				</plugin>
				
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>exec-maven-plugin</artifactId>
					<version>1.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
		
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-2</version>
				<configuration>
					<descriptors>
						<descriptor>src/main/assemble/dist.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-7</version>
				<configuration>
					<username>${ztools.scm.username}</username>
					<password>${ztools.scm.password}</password>
					<tagBase>https://bg.imim.es/svn/ztools/tags</tagBase>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<modules>
		<module>ztools-core</module>
		<module>ztools-cli</module>
		<module>ztools-ui</module>
		<!-- <module>ztools-report</module> -->
	</modules>
	
	<repositories>
		<repository>
			<id>java.net</id>
			<url>http://download.java.net/maven/2</url>
		</repository>
	</repositories>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>colt</groupId>
				<artifactId>colt</artifactId>
				<version>1.2.0</version>
				<scope>compile</scope>
			</dependency>
			<dependency>
		  		<groupId>args4j</groupId>
				<artifactId>args4j</artifactId>
				<version>2.0.8</version>
				<scope>compile</scope>
		  	</dependency>
		</dependencies>
	</dependencyManagement>
	
	<distributionManagement>
		<snapshotRepository>
			<id>ztools-repository</id>
			<name>ztools repository</name>
			<url>file://${basedir}/target/deploy</url>
		</snapshotRepository>
	</distributionManagement>
	
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<aggregate>true</aggregate>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<reportSets>
					<reportSet>
						<reports>
							<report>dependencies</report>
							<report>project-team</report>
							<report>cim</report>
  						<!--  <report>issue-tracker</report> -->
							<report>javadoc</report>
							<report>license</report>
							<report>scm</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>
</project>