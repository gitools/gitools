<tools>
    <!-- Conversion -->
    <tool>
        <name>convert</name>
        <description>Convert files between different formats</description>
        <argumentsClass>org.gitools.cli.convert.ConvertTool$Arguments</argumentsClass>
        <lifeCycleClass>org.gitools.cli.convert.ConvertTool</lifeCycleClass>
    </tool>

    <!-- Analysis -->
    <tool>
        <name>enrichment</name>
        <description>Run an enrichment analysis</description>
        <argumentsClass>org.gitools.cli.htest.EnrichmentTool$EnrichmentArguments</argumentsClass>
        <lifeCycleClass>org.gitools.cli.htest.EnrichmentTool</lifeCycleClass>
    </tool>

    <tool>
        <name>oncodrive</name>
        <description>Run a driver alterations identification analysis</description>
        <argumentsClass>org.gitools.cli.htest.OncodriveTool$OncodriveArguments</argumentsClass>
        <lifeCycleClass>org.gitools.cli.htest.OncodriveTool</lifeCycleClass>
    </tool>

    <tool>
        <name>correlation</name>
        <description>Run a correlation analysis</description>
        <argumentsClass>org.gitools.cli.correlation.CorrelationTool$CorrelationArguments</argumentsClass>
        <lifeCycleClass>org.gitools.cli.correlation.CorrelationTool</lifeCycleClass>
    </tool>

    <tool>
        <name>combination</name>
        <description>Run a combination analysis</description>
        <argumentsClass>org.gitools.cli.combination.CombinationTool$CombinationArguments</argumentsClass>
        <lifeCycleClass>org.gitools.cli.combination.CombinationTool</lifeCycleClass>
    </tool>

    <tool>
        <name>overlapping</name>
        <description>Run an overlapping analysis</description>
        <argumentsClass>org.gitools.cli.overlapping.OverlappingTool$OverlappingArguments</argumentsClass>
        <lifeCycleClass>org.gitools.cli.overlapping.OverlappingTool</lifeCycleClass>
    </tool>

    <tool>
        <name>comparison</name>
        <description>Run a group comparison analysis</description>
        <argumentsClass>org.gitools.cli.comparison.ComparisonTool$ComparisonArguments</argumentsClass>
        <lifeCycleClass>org.gitools.cli.comparison.ComparisonTool</lifeCycleClass>
    </tool>
</tools>
