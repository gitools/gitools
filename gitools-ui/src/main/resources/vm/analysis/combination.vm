<html>
<head>
	<style type="text/css">
		#include("/vm/style/default.css")

		.sectionHeader {
			background-color: rgb(250, 210, 150);
			font-weight: bold;
			margin: 1px;
			text-align: left;
		}

		.attrTable {
			margin: 0px 4px;
			width: 90%;
		}

		.propTable {
			margin: 1px;
			width: 90%;
		}

		.propName {
			margin: 1px;
			text-align: left;
			font-weight: bold;
			white-space: nowrap;
		}

		.propValue {
			margin: 1px;
			padding-left: 4px;
			text-align: left;
			white-space: normal;
			width: 100%;
		}
    </style>
</head>
<body>
    <table>
    	<tr>
    		<td class="sectionHeader">Details</td>
    	</tr>
    	<tr>
    		<table class="propTable">
    			<tr>
    				<td class="propName">Name</td>
    				<td class="propValue">$analysis.title</td>
    			</tr>
				#if( $analysis.description )
				<tr>
    				<td class="propName">Notes</td>
    				<td class="propValue">$analysis.description</td>
    			</tr>
				#end
			</table>
			#if( $analysis.attributes.size() > 0 )
			<table>
				<tr><td class="propName">Attributes</td><tr>
				<tr><td class="propValue">
    				<table class="attrTable" border="0" cellspacing="0">
						#foreach($attr in $analysis.attributes)
							#if ($attr.name)
							<tr>
								<td class="propName">$attr.name</td>
								<td class="propValue">$attr.value</td>
							</tr>
							#end
						#end
					</table>
    			</td></tr>
			</table>
			#end
			<table class="propTable">
    			<tr>
    				<td class="propName">Created</td>
    				<td class="propValue">$fmt.format($analysis.startTime)</td>
    			</tr>
    			<tr>
    				<td class="propName">Elapsed time</td>
    				<td class="propValue">$fmt.elapsedTime($analysis.elapsedTime)</td>
    			</tr>
    		</table>
    	</tr>

		<tr>
    		<td class="sectionHeader">Data</td>
    	</tr>
		<tr>
			<table class="propTable">
				<tr>
    				<td class="propName">File</td>
    				<td class="propValue">$dataFile</td>
    			</tr>
				<tr>
    				<td class="propName">Size attribute</td>
    				<td class="propValue">$sizeAttr</td>
    			</tr>
				<tr>
    				<td class="propName">P-value attribute</td>
    				<td class="propValue">$pvalueAttr</td>
    			</tr>
				<tr>
					<td class="button"><a rel="action" href="NewDataHeatmap">Heatmap</a></td>
				</tr>
			</table>
		</tr>

		<tr>
    		<td class="sectionHeader">Groups</td>
    	</tr>
		<tr>
			<table class="propTable">
				<tr>
    				<td class="propName">File</td>
					<td class="propValue">$groupsFile</td>
    			</tr>
				#if($analysis.groupsMap)
				<tr>
					<td class="button"><a rel="action" href="ViewModuleMap">View</a></td>
				</tr>
				#end
			</table>
		</tr>

		<tr>
    		<td class="sectionHeader">Results</td>
    	</tr>
		<tr>
			<table class="propTable">
    			<tr>
    				<td class="propName">Combination of</td>
					<td class="propValue">$combinationOf</td>
    			</tr>
				<tr>
					<td class="button"><a rel="action" href="NewResultsHeatmap">Heatmap</a></td>
				</tr>
			</table>
		</tr>
    </table>
</body>
</html>